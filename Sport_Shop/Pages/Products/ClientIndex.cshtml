@page
@model Sport_Shop.Pages.Products.ClientIndexModel
@{
    ViewData["Title"] = "ClientIndex";
}

<head>
    <link href="//netdna.bootstrapcdn.com/bootstrap/3.0.3/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//netdna.bootstrapcdn.com/bootstrap/3.0.3/js/bootstrap.min.js"></script>
    <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
    <!------ Include the above in your HEAD tag ---------->
</head>

<body class="bg-secondary my-5">
    <div class="container">
        <div class="row">
            <div class="col-xs-12 py-5">
                <div class="panel panel-info">
                    <div class="panel-heading">
                        <div class="panel-title">
                            <div class="row">
                                <div class="col-xs-6">
                                    <h5><span class="material-symbols-outlined">directions_bike</span>   <strong>Sportowy Sklep</strong></h5>
                                </div>

                            </div>
                        </div>
                    </div>

                    <div class="panel-body bg-light">
                        @foreach (var item in Model.Product)
                        {
                            <div class="row">
                                <div class="col-xs-2">
                                    @if (item.image == null)
                                    {
                                        <img class="img-responsive null" src="https://imicare.pl/wp-content/uploads/2018/06/brak-zdjecia_1030x578.jpg">
                                    }
                                    else
                                    {
                                        <img class="img-responsive" src="@Html.DisplayFor(modelItem => item.image)">
                                    }
                                </div>
                                <div class="col-xs-4">
                                    <h4 class="product-name"><strong>@Html.DisplayFor(modelItem => item.name)</strong></h4><h4><small>@Html.DisplayFor(modelItem => item.description)</small></h4>
                                </div>
                                <div class="col-xs-1">@Html.DisplayFor(modelItem => item.Category.categoryName)</div>

                                <div class="col-xs-5">
                                    <div class="col-xs-4 text-right">
                                        <h6><strong>@Html.DisplayFor(modelItem => item.price) <span class="text-muted">zł</span></strong></h6>
                                    </div>
                                    <div class="col-xs-6">
                                        <input type="text" class="form-control input-sm" value="1">
                                    </div>
                                    
    
                                </div>
                            </div>
                            <hr>}

                        <hr>
                        <div class="row">
                            <div class="text-center">
                                
                            </div>
                        </div>
                    </div>
                    <div class="panel-footer">
                        <div class="row text-center">
                            <div class="col-xs-9">
                                <h4 class="text-right">Total <strong>$50.00</strong></h4>
                            </div>
                            <div class="col-xs-3">
                                <button type="button" class="btn btn-success btn-block">
                                    Checkout
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
