@page
@model Sport_Shop.Pages.Admin.editUserModel
@{
}

@{
    ViewData["Title"] = "edycja użytkownika";
}

<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8" />
    <title></title>
    
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
</head>
<body>

    <h2>Nowa Użytkwonik</h2>
    <br />
    <br />
    <div class="container">
        <form class="form-horizontal" method="post">
            <div class="form-group">
                <label asp-for="editUser.userName" class="control-label col-sm2"></label>
                <div class="col-sm-6">
                    <input asp-for="editUser.userName" class="form-control">
                    <span asp-validation-for="editUser.userName" class="text-warning"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="editUser.password" class="control-label col-sm2"></label>
                <div class="col-sm-6">
                    <input asp-for="editUser.password" class="form-control">
                    <span asp-validation-for="editUser.password" class="text-warning"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="editUser.professionId" class="control-label col-sm2"></label>
                <div class="col-sm-6">
                    <select asp-for="editUser.professionId">
                        <option value="1">Administrator</option> 
                        <option value="2">Sprzedawca</option>
                        <option value="3">Klient</option>
                    </select>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button class="btn btn btn-primary">Zatwierdź</button>
                </div>
            </div>
        </form>
    </div>
</body>
</html>
