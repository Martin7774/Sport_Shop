@page
@model Sport_Shop.Pages.Admin.adminareaModel
@{
}

@{
    ViewData["Title"] = "Panel administratora";
}

<head>
    <link href="//netdna.bootstrapcdn.com/bootstrap/3.0.3/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//netdna.bootstrapcdn.com/bootstrap/3.0.3/js/bootstrap.min.js"></script>
    <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
    <!------ Include the above in your HEAD tag ---------->
</head>

<body class="py-5">

    <h2>Lista Użytkowników</h2>

    <div class="row col-sm-3">
        <a asp-page="addUser" class="btn btn-primary btn-large">Dodaj Użytkownika</a>
    </div>
    <div class="row col-sm-3">
        <a asp-page="/Categories/Index" class="btn btn-success btn-large">Kategorie</a>
    </div>
    <div class="row col-sm-3">
        <a asp-page="/Products/Index" class="btn btn-warning btn-large">Produkty</a>
    </div>
    <br />
    <br />

    <div class="panel-body bg-light">
        @foreach (var p in Model.usersList)
        {
            <div class="row">
                <div class="col-xs-3">
                    <h4 class="product-name"><strong><th scope="row"><th scope="row">@Html.DisplayFor(m => p.userId)</th></th></strong>
                </div>

                <div class="col-xs-3">

                    <img class="img-responsive null" src="https://imicare.pl/wp-content/uploads/2018/06/brak-zdjecia_1030x578.jpg">

                </div>
                <div class="col-xs-3">
                    <h4 class="product-name"><strong><th scope="row"><th scope="row">@Html.DisplayFor(m => p.userName)</th></th></strong>
                </div>
                <div class="col-xs-3">

                    @if (p.professionId == 1)
                    {
                        <td>Administrator</td>
                    }
                    else if (p.professionId == 2)
                    {
                        <td>Sprzedawca</td>
                    }
                    else
                    {
                        <td>Klient</td>
                    }
                    
                </div>

                <div class="col-xs-3">
                    <div class="col-xs-2">
                        <button type="button" class="btn btn-link btn-xs">
                            <a asp-page="deleteUser" asp-route-id="@p.userId"><span class="glyphicon glyphicon-trash"></span></a>
                        </button>
                    </div>
                    <div class="col-xs-2">
                        <button type="button" class="btn btn-link btn-xs"><a asp-page="editUser" asp-route-id="@p.userId"><span class="material-symbols-outlined">edit</span></a></button>
                    </div>
                </div>
            </div>
            <hr>}
</body>